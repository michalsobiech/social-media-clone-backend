{
  "compilerOptions": {
    "outDir": "dist",
    "module": "NodeNext",
    "target": "ES2022",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,

    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "ts-node": {
    "esm": true,
    "swc": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
